{
  "name": "electron-vibe-app",
  "version": "1.0.3",
  "description": "Electron Vibe App - Vuejs Admin Dashboard",
  "main": "dist/main.js",
  "author": "",
  "license": "ISC",
  "scripts": {
    "dev:vue": "cd vibe-app && npm run dev",
    "dev:electron": "tsc && NODE_ENV=development electron .",
    "electron:dev": "concurrently \"npm:dev:vue\" \"wait-on http://localhost:5173 && npm run dev:electron\"",
    "build:vue": "cd vibe-app && npm run build",
    "build:electron": "tsc && npm run build:vue && electron-builder",
    "build:mac": "tsc && npm run build:vue && electron-builder --mac --publish",
    "build:win": "tsc && npm run build:vue && electron-builder --win",
    "build:linux": "tsc && npm run build:vue && electron-builder --linux",
    "build:all": "tsc && npm run build:vue && electron-builder --mac --win --linux",
    "create:mock-modules": "node create-mock-modules.js"
  },
  "build": {
    "appId": "com.tuanngv.vibeapp",
    "productName": "VibeApp",
    "files": [
      "dist/**/*",
      "vibe-app/dist/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "asarUnpack": [
      "vibe-app/dist/**/*"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://github.com/tuanngv244/electron-vibe-app/releases/latest/download/"
      }
    ]
  },
  "keywords": [],
  "dependencies": {
    "adm-zip": "^0.5.10",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/node": "^20.19.28",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  }
}